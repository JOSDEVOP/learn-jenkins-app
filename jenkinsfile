pipeline{
    
    agent any
    stages{
         
        stage('Build'){
           
            agent{
                docker{
                    image 'node:18-alpine'
                    args '-u root'
                    reuseNode true
                }
            }
          
            steps{
                  always{
                cleanWs()
            }
                sh'''
                pwd
                ls -la
                npm --version
                node --version
                npm ci
                npm run build
                ls -la
                
                '''
                
            }
        }
        
        
    }
    
  
}


